        android:allowBackup="true"
        android:icon="@drawable/bone_helmet"
        android:roundIcon="@drawable/bone_helmet"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ItemsListActivity" android:screenOrientation="portrait"/>
        <activity android:name=".ItemInfoActivity" android:screenOrientation="portrait"/>
        <activity android:name=".WeaponsActivity" android:screenOrientation="portrait"/>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1997515044908390~1047954950"/>
    </application>

</manifest>